<h1>Sign Up for this ducking Project</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :nausea %>
  <%= f.number_field :nausea, min: 1, max: 5 %> <br>
  <%= f.label :happiness %>
  <%= f.number_field :happiness, min: 1, max: 5 %> <br>
  <%= f.label :tickets %>
  <%= f.number_field :tickets, min: 1, max: 5 %> <br>
  <%= f.label :height %>
  <%= f.number_field :height %> <br>
  <%= f.label :admin %>
  <%= f.check_box :admin %> <br>
  <%= f.submit 'Create User' %>
<% end %>
